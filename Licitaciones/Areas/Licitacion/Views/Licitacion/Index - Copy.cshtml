<title>Listado Licitaciones</title>

<!-- Select2 -->
<link rel="stylesheet" href="~/AdminLte/plugins/select2/css/select2.min.css">
<link rel="stylesheet" href="~/AdminLte/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">

<style>
    .dataTables_length {
        display: none !important;
    }
</style>

<div class="container-fluid" style="font-size: smaller !important;">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Home</li>
        <li class="breadcrumb-item active">Licitaciones</li>
    </ol>
    <div class="modal modal-default" id="modal-popup-Obra" style="display: none!important; margin-top: 0%;">
        @Html.Partial("_detalleObra")
    </div>
    <div class="row">
        <div class="col-3 form-group">
            <label>Expediente</label>
            <input type="text"
                   class="form-control"
                   id="txtNroExpediente"
                   style="font-size: smaller !important;"
                   placeholder="Nro Expediente">
        </div>
        <div class="col-3 form-group">
            <label>Obra</label>
            <input type="text"
                   class="form-control"
                   id="txtNombreObra"
                   style="font-size: smaller !important;"
                   placeholder="Nombre de Obra">
        </div>
        <div class="col-3 form-group">
            <label for="exampleInputEmail1">Publicación</label>
            <input type="date"
                   class="form-control pull-left ui-datepicker"
                   style="font-size: smaller !important;"
                   id="txtFechaPublic">
        </div>
        <div class="col-3 form-group">
            <label>Organismo</label>
            <select id="selectOrganismo"
                    class="form-control select2bs4">
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            <button type="button"
                    class="btn btn-block btn-success"
                    id="btnBuscar"
                    style="font-size:smaller !important">
                Buscar
            </button>
        </div>
        <div class="col-1">
            <button type="button"
                    class="btn btn-block btn-secondary"
                    style="font-size:smaller !important">
                Exportar
            </button>
        </div>
    </div>
    <div class="row" style="margin-top:1%;">
        <div class="col-lg-3 col-6">
            <!-- small card -->
            <div class="small-box bg-info" style="background-color: #00c0ef !important; font-size: smaller !important;">
                <div class="inner">
                    <label id="qAPublicar" style="font-size:x-large!important">0</label>
                    <p style="font-size: small !important;">A publicar</p>
                </div>
                <div class="icon">
                    <i class="fas fa-clock"></i>
                </div>
                <p class="small-box-footer" onclick="filtrarEstado(5)" style="cursor: pointer;">
                    Más Info <i class="fas fa-arrow-circle-right"></i>
                </p>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small card -->
            <div class="small-box bg-success" style="background-color: #00a65a !important; font-size: smaller !important;">
                <div class="inner">
                    <label id="qPublicada" style="font-size:x-large!important">0</label>

                    <p style="font-size: small !important;">Licitación Publicada</p>
                </div>
                <div class="icon">
                    <i class="fas fa-calendar-check"></i>
                </div>
                <p class="small-box-footer" onclick="filtrarEstado(6)" style="cursor: pointer;">
                    Más Info <i class="fas fa-arrow-circle-right"></i>
                </p>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small card -->
            <div class="small-box bg-warning" style="background-color: #5f2571 !important; font-size: smaller !important;">
                <div class="inner">
                    <label id="qAbierta" style="font-size: x-large !important; color: white !important;">0</label>

                    <p style="color: white !important;font-size: small !important; color: white!important;">Ofertas abiertas</p>
                </div>
                <div class="icon">
                    <i class="fas fa-layer-group"></i>
                </div>
                <p class="small-box-footer" onclick="filtrarEstado(7)" style="cursor: pointer;">
                    Más Info <i class="fas fa-arrow-circle-right"></i>
                </p>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small card -->
            <div class="small-box bg-danger" style="background-color: coral !important; font-size: smaller !important;">
                <div class="inner">
                    <label id="qDesierta" style="font-size:x-large!important">0</label>

                    <p style="font-size: small !important;">Licitación Desierta</p>
                </div>
                <div class="icon">
                    <i class="fas fa-skull-crossbones"></i>
                </div>
                <p class="small-box-footer" onclick="filtrarEstado(17)" style="cursor: pointer;">
                    Más Info <i class="fas fa-arrow-circle-right"></i>
                </p>
            </div>
        </div>
        <!-- ./col -->
    </div>
    <div class="row">
        <div class="col-lg-3 col-6">
            <!-- small card -->
            <div class="small-box bg-info" style="background-color: chocolate !important;">
                <div class="inner">
                    <label id="qFracasada" style="font-size:x-large!important">0</label>

                    <p style="font-size: small !important;">Licitación Fracasada</p>
                </div>
                <div class="icon">
                    <i class="fas fa-scroll"></i>
                </div>
                <p class="small-box-footer" onclick="filtrarEstado(16)" style="cursor: pointer;">
                    Más Info <i class="fas fa-arrow-circle-right"></i>
                </p>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small card -->
            <div class="small-box bg-success" style="background-color: #f39c12 !important;">
                <div class="inner">
                    <label id="qPreAdjudicada" style="font-size:x-large!important">0</label>

                    <p style="font-size: small !important;">Pre-Adjudicada</p>
                </div>
                <div class="icon">
                    <i class="fas fa-bars"></i>
                </div>
                <p class="small-box-footer" onclick="filtrarEstado(15)" style="cursor: pointer;">
                    Más Info <i class="fas fa-arrow-circle-right"></i>
                </p>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small card -->
            <div class="small-box bg-warning" style="background-color: #8fbc8f !important;">
                <div class="inner">
                    <label id="qAdjudicada" style="font-size:x-large!important; color: white !important;">0</label>

                    <p style="color: white !important; font-size: small !important;">Adjudicada</p>
                </div>
                <div class="icon">
                    <i class="fas fa-pen-square"></i>
                </div>
                <p class="small-box-footer" onclick="filtrarEstado(14)" style="cursor: pointer;">
                    Más Info <i class="fas fa-arrow-circle-right"></i>
                </p>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small card -->
            <div class="small-box bg-danger" style="background-color: #dd4b39 !important;">
                <div class="inner">
                    <label id="qFirmada" style="font-size:x-large!important">0</label>

                    <p style="font-size: small !important;">Contrato Firmado</p>
                </div>
                <div class="icon">
                    <i class="fas fa-signature"></i>
                </div>
                <p class="small-box-footer" onclick="filtrarEstado(8)" style="cursor: pointer;">
                    Más Info <i class="fas fa-arrow-circle-right"></i>
                </p>
            </div>
        </div>
        <!-- ./col -->
    </div>

    <div class="box-header with-border">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="tablaObra" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th class="text-center">Nombre</th>
                                    <th class="text-center">Expediente</th>
                                    <th class="text-center">Publicacion</th>
                                    <th class="text-center">Organismo</th>
                                    <th class="text-center">Monto</th>
                                    <th class="text-center">Etapa</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>

</div>
<!-- Page specific script -->
@section Scripts
{
    <!-- Select2 -->
    <script src="~/AdminLte/plugins/select2/js/select2.full.min.js"></script>
    <!-- InputMask -->
    <script src="~/AdminLte/plugins/moment/moment.min.js"></script>
    <script src="~/AdminLte/plugins/inputmask/jquery.inputmask.min.js"></script>
    <script src="~/AdminLte/plugins/datatables/jquery.dataTables.min.js"></script>
    <link href="~/Content/DataTables2/datatables.min.css" rel="stylesheet" />

    <script>

        $('.select2').select2();
        $('.select2bs4').select2({
            theme: 'bootstrap4'
        });
        //Datemask dd/mm/yyyy
        $('#datemask').inputmask('dd/mm/yyyy', { 'placeholder': 'dd/mm/yyyy' })

        configurarInicio();

        function configurarInicio() {
            loadOrganismo($('#selectOrganismo'), true);
            buscar();
        };

        function loadOrganismo(control, seleccionar) {
            var select = control;
            select.empty();

            if (seleccionar) {
                select.append($('<option/>', { value: '0', text: '--Seleccione--' }));
            }

            var urltmp = "/api/Organismo/Listar";
            fetch(urltmp, { method: "GET" })
                .catch(() => {
                    alert('Ocurrio un error');
                })
                .then(res => res.json())
                .then(data => {
                    $.each(data.replay, function (index, result) {
                        select.append($('<option/>', {
                            value: result.id,
                            text: result.nombre
                        }));
                    });
                })
        }

        function buscar() {
            $('#tablaObra').DataTable().destroy();

            cargarTarjeta();

            var url = "/api/Licitacion/listarObra?";
            url = url + "nroExpediente=" + $('#txtNroExpediente').val();
            url = url + "&nombreObra=" + $('#txtNombreObra').val();
            url = url + "&fechaPub=" + $('#txtFechaPublic').val();
            url = url + "&idOrganismo=" + $('#selectOrganismo').val();
            url = url + "&idEstado=" + 0;

            cargarTabla(url);
        };

        function cargarTabla(url) {

            var table = $("#tablaObra").DataTable({
                "processing": true,
                "serverSide": true,
                "stateSave": true,
                "language": {
                    "processing": "Procesando"
                },
                "scrollY": "500px",
                "scrollCollapse": true,
                "ajax": {
                    "url": url,
                    "type": "POST",
                    "datatype": "json"
                },
                "pageLength": 50,
                "filter": false,
                "responsivePriority": 2, //define que columna es la que se estira
                "data": null,
                "columns": [
                    {
                        "data": "nombreObra", "name": "Nombre", "autoWidth": true,
                        render: function (data, type, row, meta) {
                            //return "<div onclick='mostrarPopup(" + row.idCliente + ")' style='cursor:pointer;'>" + data + "</div>"
                            return "<div style='text-align: left;'>" + data + "</div>"
                        }
                    },
                    {
                        "data": "nroExpedienteString", "name": "Expediente", "autoWidth": true,
                        render: function (data, type, row, meta) {
                            return "<div style='text-align: left;'>" + data + "</div>"
                        }
                    },
                    {
                        "data": "fechaPublicacionString", "name": "Publicacion", "autoWidth": true,
                        render: function (data, type, row, meta) {
                            return "<div style='text-align: center;'>" + data + "</div>"
                        }
                    },
                    {
                        "data": "nombreOrganismoString", "name": "Organismo", "autoWidth": true,
                        render: function (data, type, row, meta) {
                            return "<div style='text-align: center;'>" + data + "</div>"
                        }
                    },
                    {
                        "data": "montoObraString", "name": "Monto", "autoWidth": true,
                        render: function (data, type, row, meta) {
                            return "<div style='text-align: center;'>" + data + "</div>"
                        }
                    },
                    {
                        "data": "nombreEtapa", "name": "Etapa", "autoWidth": true,
                        render: function (data, type, row, meta) {
                            if (row.idEtapa == 5) {
                                return "<div style='text-align: center;'><span class='badge bg-danger' style='background-color: #00c0ef!important;'>" + data + "</span></div>"
                            }
                            else {
                                if (row.idEtapa == 6) {
                                    return "<div style='text-align: center;'><span class='badge bg-danger' style='background-color: #00a65a!important;'>" + data + "</span></div>"
                                }
                                else {
                                    if (row.idEtapa == 7) {
                                        return "<div style='text-align: center;'><span class='badge bg-danger' style='background-color: #5f2571!important;'>" + data + "</span></div>"
                                    }
                                    else {
                                        if (row.idEtapa == 8) {
                                            return "<div style='text-align: center;'><span class='badge bg-danger' style='background-color: #dd4b39!important;'>" + data + "</span></div>"
                                        }
                                        else {
                                            if (row.idEtapa == 14) {
                                                return "<div style='text-align: center;'><span class='badge bg-danger' style='background-color: #8fbc8f!important;'>" + data + "</span></div>"
                                            }
                                            else {
                                                if (row.idEtapa == 15) {
                                                    return "<div style='text-align: center;'><span class='badge bg-danger' style='background-color: #f39c12!important;'>" + data + "</span></div>"
                                                }
                                                else {
                                                    if (row.idEtapa == 16) {
                                                        return "<div style='text-align: center;'><span class='badge bg-danger' style='background-color: chocolate!important;'>" + data + "</span></div>"
                                                    }
                                                    else {
                                                        return "<div style='text-align: center;'><span class='badge bg-danger' style='background-color: coral!important;'>" + data + "</span></div>"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    {
                        "data": "accion", "name": "Acciones", "autoWidth": true,
                        render: function (data, type, row, meta) {
                            return "<div style='text-align: center;'><i class='fas fa-pen' title='Editar' style='text-align: center;cursor:pointer; color: green;' onclick='cargarNroObra(" + row.idObra + ")'></i>&nbsp;&nbsp;<i class='fas fa-file-pdf' title='Descargar Ficha' style='text-align: center;cursor:pointer; color: coral;' onclick='cargarNroObra(" + row.idObra + ")'></i></div>"
                        }
                    },
                ],
            });
        }

        $('#btnBuscar').click(function () {
            buscar();
        });

        function cargarTarjeta() {
            var urlTarj = "/api/Licitacion/calcularTarjeta?";
            urlTarj = urlTarj + "nroExpediente=" + $('#txtNroExpediente').val();
            urlTarj = urlTarj + "&nombreObra=" + $('#txtNombreObra').val();
            urlTarj = urlTarj + "&fechaPub=" + $('#txtFechaPublic').val();
            urlTarj = urlTarj + "&idOrganismo=" + $('#selectOrganismo').val();

            $.getJSON(urlTarj)
                .done(function (data) {
                    $('#qAPublicar').text(data.replay.qAPublicar);
                    $('#qPublicada').text(data.replay.qPublicada);
                    $('#qAbierta').text(data.replay.qAbierta);
                    $('#qDesierta').text(data.replay.qDesierta);
                    $('#qFracasada').text(data.replay.qFracasada);
                    $('#qPreAdjudicada').text(data.replay.qPreAdjudicada);
                    $('#qAdjudicada').text(data.replay.qAdjudicada);
                    $('#qFirmada').text(data.replay.qFirmada);

                })
                .fail(function (erro) {
                    console.log('Error al cargar las Tarjetas');
                });
        }

        function filtrarEstado(idEstado) {
            $('#tablaObra').DataTable().destroy();
            var url = "/api/Licitacion/listarObra?";
            url = url + "nroExpediente=" + $('#txtNroExpediente').val();
            url = url + "&nombreObra=" + $('#txtNombreObra').val();
            url = url + "&fechaPub=" + $('#txtFechaPublic').val();
            url = url + "&idOrganismo=" + $('#selectOrganismo').val();
            url = url + "&idEstado=" + idEstado;
            cargarTabla(url);
        }

        function cargarNroObra(idObra) {
            $('#idObra').val(idObra);
            mostrarPopup(idObra);
        }

        $('#btnCerrarPopupObra').click(function () {
            $('#modal-popup-Obra').css("display", "none");
        });
        $('#btnGuardarPopupObra').click(function () {
            grabarDatos();
        });
        $('#txtPpPresupuesto').keypress(function (e) {
            if (e.which == 13) {
                e.preventDefault();
                $('#selectPpMoneda').focus();
            }
        });
        $('#selectPpMoneda').keypress(function (e) {
            if (e.which == 13) {
                e.preventDefault();
                $('#selectPpTipoContratacion').focus();
            }
        });
        $('#selectPpTipoContratacion').keypress(function (e) {
            if (e.which == 13) {
                e.preventDefault();
                $('#txtPpEjecucion').focus();
            }
        });
        $('#txtPpEjecucion').keypress(function (e) {
            if (e.which == 13) {
                e.preventDefault();
                $('#txtPpUrlPliego').focus();
            }
        });
        $('#txtPpUrlPliego').keypress(function (e) {
            if (e.which == 13) {
                e.preventDefault();
                $('#txtPpValorPliego').focus();
            }
        });
        $('#txtPpValorPliego').keypress(function (e) {
            if (e.which == 13) {
                e.preventDefault();
                $('#txtPpMailConsulta').focus();
            }
        });
        $('#txtPpMailConsulta').keypress(function (e) {
            if (e.which == 13) {
                e.preventDefault();
                $('#txtPpFechaPublicacion').focus();
            }
        });
        $('#txtPpFechaPublicacion').keypress(function (e) {
            if (e.which == 13) {
                e.preventDefault();
                $('#txtPpLimiteConsultas').focus();
            }
        });
        $('#txtPpLimiteConsultas').keypress(function (e) {
            if (e.which == 13) {
                e.preventDefault();
                $('#txtPpFechaApertura').focus();
            }
        });
        $('#txtPpFechaApertura').keypress(function (e) {
            if (e.which == 13) {
                e.preventDefault();
                $('#txtPpHoraApertura').focus();
            }
        });
        $('#txtPpHoraApertura').keypress(function (e) {
            if (e.which == 13) {
                e.preventDefault();
                $('#txtPpDomicilioPresentacion').focus();
            }
        });
        $('#txtPpDomicilioPresentacion').keypress(function (e) {
            if (e.which == 13) {
                e.preventDefault();
                $('#txtPpDomicilioApertura').focus();
            }
        });

    </script>
}